@page "/plantinfo/{Id:int}"
@using Emergence.Client.Components

@inherits PlantInfoComponent

<button class="btn btn-primary" @onclick="async () => await IsItemLoadedChanged.InvokeAsync(false)">Back</button>
@if (IsEditable && PlantInfo.PlantInfoId > 0)
{
    <button class="btn btn-primary" @onclick="() => IsEditing = !IsEditing">@(IsEditing ? "Cancel" : "Edit")</button>
}
@if (IsEditing && PlantInfo != null)
{
    <EditPlantInfo PlantInfo="PlantInfo" @bind-IsEditing="IsEditing" @bind-IsItemLoaded="IsItemLoaded" />
}
else if (PlantInfo != null)
{
    <ViewPlantInfo PlantInfo="PlantInfo" @bind-IsEditing="IsEditing" @bind-IsItemLoaded="IsItemLoaded" />
}
else
{
    <span>Loading...</span>
}

