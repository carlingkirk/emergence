@page "/origin/{Id:int}"
@using Emergence.Client.Components

@inherits OriginComponent

<div class="card-header h3">
    @if (!IsModal)
    {
        <button class="btn btn-primary" @onclick="Back">Back</button>
    }
    <span class="title">Origin: </span>
    @if (Origin != null)
    {
        <span class="font-italic">@(Origin?.Name ?? "New")</span>
    }
</div>
<div class="group">
    @if (IsEditing && Origin != null)
    {
        <EditOrigin RefreshList="RefreshList" Origin="Origin" @bind-IsEditing="IsEditing" @bind-IsItemLoaded="IsItemLoaded" @bind-List="List" />
    }
    else if (Origin != null)
    {
        <ViewOrigin RefreshList="RefreshList" Origin="Origin" @bind-IsEditing="IsEditing" @bind-IsItemLoaded="IsItemLoaded" @bind-List="List" />
    }
    else
    {
        <span>Loading...</span>
    }
    @if (IsEditable && Origin != null && Origin.OriginId > 0)
    {
        <button class="btn @(IsEditing ? "btn-secondary" : "btn-primary")" @onclick="() => IsEditing = !IsEditing">@(IsEditing ? "Cancel" : "Edit")</button>
    }
</div>
