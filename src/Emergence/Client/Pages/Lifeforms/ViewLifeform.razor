@page "/lifeform/view/{Id:int}"
@using Microsoft.AspNetCore.Authorization
@using Emergence.Data.Shared.Models
@using Emergence.Client.Components
@using Emergence.Data.Shared.Extensions

@attribute [Authorize]
@inherits LifeformComponent

@if (Lifeform != null)
{
    <div class="form-group container">
        <div class="col-6 col-xs-1">
            <div>
                <label for="scientific-name">Scientific Name</label>
            </div>
            <div>
                <span class="text-body">@Lifeform.ScientificName</span>
            </div>
        </div>
        <div class="col-6 col-xs-1">
            <div>
                <label for="common-name">Common Name</label>
            </div>
        </div>
    </div>
}

