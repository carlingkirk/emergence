@page "/specimen/{Id:int}"
@using Emergence.Client.Components

@inherits SpecimenComponent

@if (!IsModal)
{
    <button class="btn btn-primary" @onclick="Back">Back</button>
}
@if (IsEditable && Specimen != null && Specimen.SpecimenId > 0)
{
    <button class="btn btn-primary" @onclick="() => IsEditing = !IsEditing">@(IsEditing ? "Cancel" : "Edit")</button>
    <button class="btn btn-primary" @onclick="async () => await RemoveSpecimen()">Delete</button>
}
@if (IsEditing && Specimen != null)
{
    <EditSpecimen RefreshList="RefreshList" Specimen="Specimen" @bind-IsEditing="IsEditing" @bind-IsItemLoaded="IsItemLoaded" @bind-List="List" />
}
else if (Specimen != null)
{
    <ViewSpecimen RefreshList="RefreshList" Specimen="Specimen" @bind-IsEditing="IsEditing" @bind-IsItemLoaded="IsItemLoaded" @bind-List="List"/>
}
else
{
    <span>Loading...</span>
}

