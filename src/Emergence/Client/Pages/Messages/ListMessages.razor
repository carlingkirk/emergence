@using Emergence.Client.Components
@inject IModalServiceClient ModalServiceClient
@inherits ListMessagesComponent

@if (!IsItemLoaded)
{
    <form @onsubmit="SearchAsync">
        @if (ShowSearch)
        {
            <input type="text" @bind="SearchText" id="search" />
            <button class="btn btn-primary" type="submit">Search</button>
        }

        @if (List != null)
        {
            <div class="group">
                <table>
                    <SortableHeaders HeaderNames="GetHeaders()" Sort="SortAsync" @bind-Values="List" />
                    @if (!List.Any())
                    {
                        <tr><td><span>No messages found</span></td></tr>
                    }
                    @foreach (var message in List)
                    {
                    <tr>
                        <td style="padding: .5rem;">
                            @if (Sent)
                            {
                                <UserDisplay User="message.User" Size="35" />
                            }
                            else
                            {
                                <UserDisplay User="message.Sender" Size="35" />
                            }
                        </td>
                        <td>
                            <span>@message.DateSent.ToLocalTime().ToShortDateString()</span>
                        </td>
                        <td>
                            <a href="" @onclick="async () => await ModalServiceClient.ShowMessageModal(message)" @onclick:preventDefault>
                                <span>@message.ShortMessage</span>
                            </a>
                        </td>
                        @if (!Sent)
                        {
                        <td>
                            <button type="button" class="btn btn-sm btn-primary" @onclick="async () => await ModalServiceClient.ShowMessageModal(message.Sender)">
                            <span class="oi oi-plus btn-oi"></span>Reply</button>
                        </td>
                        }
                    </tr>
                    }
                </table>
                <div>
                    @if (List.Any())
                    {
                        <Pager Page="PageAsync" @bind-Values="List" Count="@Count" Take="@Take" CurrentPage="@CurrentPage"></Pager>
                    }
                </div>
            </div>
        }
    </form>
}

